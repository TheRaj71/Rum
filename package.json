{
  "name": "svelte-registry",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "test": "pnpm -r run test",
    "rum": "pnpm --filter rum",
    "registry:build": "pnpm --filter @svelte-registry/www run registry:build",
    "registry:dev": "pnpm --filter @svelte-registry/www run registry:dev",
    "dev:server": "pnpm --filter @svelte-registry/www run dev:server"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
